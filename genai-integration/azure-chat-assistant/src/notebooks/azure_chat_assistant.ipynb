   "source": [
    "{\n",
    " \"cells\": [\n",
    "  {\n",
    "   \"metadata\": {\n",
    "    \"jupyter\": {\n",
    "     \"is_executing\": true\n",
    "    }\n",
    "   },\n",
    "   \"cell_type\": \"code\",\n",
    "   \"source\": [\n",
    "    \"import openai\\n\",\n",
    "    \"import ipywidgets as widgets\\n\",\n",
    "    \"from IPython.display import display, Markdown\\n\",\n",
    "    \"import os\\n\",\n",
    "    \"import json\\n\",\n",
    "    \"from datetime import datetime\\n\",\n",
    "    \"from dotenv import load_dotenv\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Load environment variables from .env file\\n\",\n",
    "    \"load_dotenv(dotenv_path=\\\"../.env\\\")\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Toggle Azure OpenAI usage based on environment\\n\",\n",
    "    \"USE_AZURE = os.getenv(\\\"USE_AZURE\\\", \\\"False\\\").lower() == \\\"true\\\"\\n\",\n",
    "    \"\\n\",\n",
    "    \"# API credentials and model config\\n\",\n",
    "    \"OPENAI_API_KEY = os.getenv(\\\"OPENAI_API_KEY\\\")\\n\",\n",
    "    \"OPENAI_MODEL = os.getenv(\\\"OPENAI_MODEL\\\", \\\"gpt-4\\\")\\n\",\n",
    "    \"\\n\",\n",
    "    \"AZURE_API_BASE = os.getenv(\\\"AZURE_API_BASE\\\")\\n\",\n",
    "    \"AZURE_API_KEY = os.getenv(\\\"AZURE_API_KEY\\\")\\n\",\n",
    "    \"AZURE_DEPLOYMENT_NAME = os.getenv(\\\"AZURE_DEPLOYMENT_NAME\\\")\\n\",\n",
    "    \"AZURE_API_VERSION = os.getenv(\\\"AZURE_API_VERSION\\\", \\\"2023-03-15-preview\\\")\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Configure OpenAI client\\n\",\n",
    "    \"if USE_AZURE:\\n\",\n",
    "    \"    openai.api_type = \\\"azure\\\"\\n\",\n",
    "    \"    openai.api_base = AZURE_API_BASE\\n\",\n",
    "    \"    openai.api_version = AZURE_API_VERSION\\n\",\n",
    "    \"    openai.api_key = AZURE_API_KEY\\n\",\n",
    "    \"else:\\n\",\n",
    "    \"    openai.api_key = OPENAI_API_KEY\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Class to manage individual chat sessions\\n\",\n",
    "    \"class ChatSession:\\n\",\n",
    "    \"    def __init__(self, session_id=None):\\n\",\n",
    "    \"        self.session_id = session_id or datetime.now().strftime(\\\"%Y%m%d_%H%M%S\\\")\\n\",\n",
    "    \"        self.history = [{\\\"role\\\": \\\"system\\\", \\\"content\\\": \\\"You are ChatGPT, a helpful assistant.\\\"}]\\n\",\n",
    "    \"\\n\",\n",
    "    \"    def add_user_message(self, content):\\n\",\n",
    "    \"        self.history.append({\\\"role\\\": \\\"user\\\", \\\"content\\\": content})\\n\",\n",
    "    \"\\n\",\n",
    "    \"    def add_assistant_message(self, content):\\n\",\n",
    "    \"        self.history.append({\\\"role\\\": \\\"assistant\\\", \\\"content\\\": content})\\n\",\n",
    "    \"\\n\",\n",
    "    \"    def save_to_file(self):\\n\",\n",
    "    \"        # Persist session history locally\\n\",\n",
    "    \"        os.makedirs(\\\"../chat_sessions\\\", exist_ok=True)\\n\",\n",
    "    \"        with open(f\\\"../chat_sessions/{self.session_id}.json\\\", \\\"w\\\") as f:\\n\",\n",
    "    \"            json.dump(self.history, f, indent=2)\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Query OpenAI or Azure OpenAI model\\n\",\n",
    "    \"def query_chatgpt(messages):\\n\",\n",
    "    \"    if USE_AZURE:\\n\",\n",
    "    \"        response = openai.ChatCompletion.create(\\n\",\n",
    "    \"            engine=AZURE_DEPLOYMENT_NAME,\\n\",\n",
    "    \"            messages=messages,\\n\",\n",
    "    \"            temperature=0.7,\\n\",\n",
    "    \"        )\\n\",\n",
    "    \"    else:\\n\",\n",
    "    \"        response = openai.ChatCompletion.create(\\n\",\n",
    "    \"            model=OPENAI_MODEL,\\n\",\n",
    "    \"            messages=messages,\\n\",\n",
    "    \"            temperature=0.7,\\n\",\n",
    "    \"        )\\n\",\n",
    "    \"    return response[\\\"choices\\\"][0][\\\"message\\\"][\\\"content\\\"]\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Set up chat UI components\\n\",\n",
    "    \"output_box = widgets.Output()\\n\",\n",
    "    \"input_box = widgets.Textarea(\\n\",\n",
    "    \"    placeholder=\\\"Type your message here...\\\",\\n\",\n",
    "    \"    layout=widgets.Layout(width=\\\"100%\\\", height=\\\"80px\\\")\\n\",\n",
    "    \")\\n\",\n",
    "    \"send_btn = widgets.Button(description=\\\"Send\\\", button_style=\\\"primary\\\")\\n\",\n",
    "    \"new_chat_btn = widgets.Button(description=\\\"New Chat\\\", button_style=\\\"warning\\\")\\n\",\n",
    "    \"session_label = widgets.Label()\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Initialize first chat session\\n\",\n",
    "    \"current_session = ChatSession()\\n\",\n",
    "    \"session_label.value = f\\\"Current Session: {current_session.session_id}\\\"\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Handle sending a message\\n\",\n",
    "    \"def on_send(_):\\n\",\n",
    "    \"    user_input = input_box.value.strip()\\n\",\n",
    "    \"    if not user_input:\\n\",\n",
    "    \"        return\\n\",\n",
    "    \"\\n\",\n",
    "    \"    input_box.value = \\\"\\\"\\n\",\n",
    "    \"    current_session.add_user_message(user_input)\\n\",\n",
    "    \"\\n\",\n",
    "    \"    with output_box:\\n\",\n",
    "    \"        display(Markdown(f\\\"**You:** {user_input}\\\"))\\n\",\n",
    "    \"\\n\",\n",
    "    \"    try:\\n\",\n",
    "    \"        response = query_chatgpt(current_session.history)\\n\",\n",
    "    \"    except Exception as e:\\n\",\n",
    "    \"        response = f\\\"Error: {str(e)}\\\"\\n\",\n",
    "    \"\\n\",\n",
    "    \"    current_session.add_assistant_message(response)\\n\",\n",
    "    \"\\n\",\n",
    "    \"    with output_box:\\n\",\n",
    "    \"        display(Markdown(f\\\"**GPT:** {response}\\\"))\\n\",\n",
    "    \"\\n\",\n",
    "    \"    current_session.save_to_file()\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Start a new chat session\\n\",\n",
    "    \"def on_new_chat(_):\\n\",\n",
    "    \"    global current_session\\n\",\n",
    "    \"    current_session = ChatSession()\\n\",\n",
    "    \"    session_label.value = f\\\"Current Session: {current_session.session_id}\\\"\\n\",\n",
    "    \"    output_box.clear_output()\\n\",\n",
    "    \"    input_box.value = \\\"\\\"\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Bind button actions\\n\",\n",
    "    \"send_btn.on_click(on_send)\\n\",\n",
    "    \"new_chat_btn.on_click(on_new_chat)\\n\",\n",
    "    \"\\n\",\n",
    "    \"# Render the chat UI\\n\",\n",
    "    \"ui = widgets.VBox([\\n\",\n",
    "    \"    session_label,\\n\",\n",
    "    \"    output_box,\\n\",\n",
    "    \"    widgets.HBox([send_btn, new_chat_btn]),\\n\",\n",
    "    \"    input_box\\n\",\n",
    "    \"])\\n\",\n",
    "    \"\\n\",\n",
    "    \"display(ui)\\n\"\n",
    "   ],\n",
